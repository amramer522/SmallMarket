<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Display_Details_Fragment_Tv_ProductImg"
        android:layout_width="@dimen/d150"
        android:layout_height="@dimen/d150"
        android:layout_above="@id/Display_Details_Fragment_Tv_ProductName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/d16"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/Display_Details_Fragment_Tv_ProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Display_Details_Fragment_Tv_ProductId"
        android:layout_marginStart="@dimen/d16"
        android:layout_marginTop="@dimen/d16"
        android:layout_marginEnd="@dimen/d16"
        android:text="@string/product_name"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Display_Details_Fragment_Tv_ProductId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/Display_Details_Fragment_Tv_ProductPrice"
        android:layout_marginStart="@dimen/d16"
        android:layout_marginTop="@dimen/d16"
        android:layout_marginEnd="@dimen/d16"
        android:text="Product Id : "
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Display_Details_Fragment_Tv_ProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/d16"
        android:layout_marginTop="@dimen/d16"
        android:layout_marginEnd="@dimen/d16"
        android:text="Product Price : "
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/Display_Details_Fragment_Btn_DeleteProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/d16"
        android:layout_marginEnd="@dimen/d16"
        android:layout_marginBottom="@dimen/d16"
        android:background="#f02"
        android:text="Delete Product"
        android:textColor="@color/white" />


</RelativeLayout>